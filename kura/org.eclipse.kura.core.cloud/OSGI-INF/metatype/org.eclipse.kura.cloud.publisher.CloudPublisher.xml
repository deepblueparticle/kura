<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.cloud.publisher.CloudPublisher" 
         name="CloudPublisher" 
         description="The CloudPublisher allows to define publishing parameters and provide a simple endpoint where the applications can attach to publish their messages.">
        
        <AD id="cloud.service.pid"
            name="cloud.service.pid"
            type="String"
            cardinality="0"
            required="true"
            default="org.eclipse.kura.cloud.CloudService"
            description="The Kura Service PID of the Cloud Service to use to publish messages.">
        </AD>
        
        <AD id="appId"
            name="appId"
            type="String"
            cardinality="0"
            required="false"
            default="heater"
            description='The application id used to publish messages.'>
        </AD>
        
        <AD id="semantic.topic"
        	name="semantic.topic"
        	type="String"
        	cardinality="0"
        	required="false"
        	default="data"
        	description='Follows the application Id and specifies the rest of the publishing topic.'>
        </AD>
                    
        <AD id="qos"
            name="qos"
            type="Integer"
            cardinality="0"
            required="true"
            default="0"
            description='The desired quality of service for the messages that have to be published.'>
            <Option label="0" value="0" />
            <Option label="1" value="1" />
        </AD>
                    
        <AD id="retain"
            name="retain"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Default retaing flag for the published messages.">
        </AD>
        
        <AD id="message.type"
            name="message.type"
            type="String"
            cardinality="0"
            required="true"
            default="data"
            description="Type of message to be published.">
            <Option label="Data" value="data" />
            <Option label="Control" value="control" />
        </AD>
            
        <AD id="priority"
            name="priority"
            type="Integer"
            cardinality="0"
            required="true"
            default="7"
            description='Topic prefix for system and device management messages.'>
        </AD>
    </OCD>
    
    <Designate pid="org.eclipse.kura.cloud.publisher.CloudPublisher" factoryPid="org.eclipse.kura.cloud.publisher.CloudPublisher">
        <Object ocdref="org.eclipse.kura.cloud.publisher.CloudPublisher"/>
    </Designate>
</MetaData>
