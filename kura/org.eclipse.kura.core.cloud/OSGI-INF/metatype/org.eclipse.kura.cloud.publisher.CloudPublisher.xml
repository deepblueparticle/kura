<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.cloud.publisher.CloudPublisher" 
         name="CloudPublisher" 
         description="The CloudService allows for setting a user friendly name for the current device. It also provides the option to compress message payloads to reduce network traffic.">
        
        <AD id="cloud.service.pid"
            name="cloud.service.pid"
            type="String"
            cardinality="0"
            required="true"
            default="org.eclipse.kura.cloud.CloudService"
            description="Friendly name pid">
        </AD>
        
        <AD id="appId"
            name="appId"
            type="String"
            cardinality="0"
            required="false"
            default="heater"
            description='app id'>
        </AD>
        
        <AD id="semantic.topic"
        	name="semantic.topic"
        	type="String"
        	cardinality="0"
        	required="false"
        	default="/data"
        	description='semantic topic'>
        </AD>
                    
        <AD id="qos"
            name="qos"
            type="Integer"
            cardinality="0"
            required="true"
            default="0"
            description='Topic prefix for system and device management messages.'>
            <Option label="0" value="0" />
            <Option label="1" value="1" />
        </AD>
                    
        <AD id="retain"
            name="retain"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="Compress message payloads before sending them to the remote server to reduce the network traffic.">
        </AD>
        
        <AD id="message.type"
            name="message.type"
            type="String"
            cardinality="0"
            required="true"
            default="data"
            description="Whether or not to republish the MQTT Birth Certificate on GPS lock event">
            <Option label="Data" value="data" />
            <Option label="Control" value="control" />
        </AD>
            
        <AD id="priority"
            name="priority"
            type="Integer"
            cardinality="0"
            required="true"
            default="7"
            description='Topic prefix for system and device management messages.'>
        </AD>
    </OCD>
    
    <Designate pid="org.eclipse.kura.cloud.publisher.CloudPublisher" factoryPid="org.eclipse.kura.cloud.publisher.CloudPublisher">
        <Object ocdref="org.eclipse.kura.cloud.publisher.CloudPublisher"/>
    </Designate>
</MetaData>
